{
  "apiVersion": "stash.appscode.com/v1alpha1",
  "kind": "Restic",
  "metadata": {
    "name": "stash-restic-mongo",
    "namespace": "default"
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "arkismongopersistentd0"
      }
    },
    "fileGroups": [
      {
        "path": "/data/db",
        "retentionPolicyName": "keep-last-5"
      }
    ],
    "backend": {
      "local": {
        "mountPath": "/safe",
        "hostPath": {
          "path": "/safe2"
        }
      },
      "storageSecretName": "stash-demo"
    },
    "schedule": "@every 1m",
    "volumeMounts": [
      {
        "mountPath": "/data/db",
        "name": "mongo-persistent-storage"
      }
    ],
    "retentionPolicies": [
      {
        "name": "keep-last-5",
        "keepLast": 5,
        "prune": true
      }
    ]
  }
}